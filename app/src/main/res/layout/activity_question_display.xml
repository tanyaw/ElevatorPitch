<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="twanwatanakool.elevatorpitches.QuestionDisplay">

    <LinearLayout
        android:id="@+id/PrepTimeBar"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:background="#FA8072"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/MenuButton"
            android:layout_weight="10"
            android:text="Menu"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/PrepTimeText"
            android:layout_weight="90"
            android:text="Prep Time"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#FFFFF0"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/QuestionLayout"
        android:layout_weight="40"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/QuestionText"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\nQuestion is..."/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/AnswerLayout"
        android:layout_weight="40"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/AnswerText"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\nAnswer is..."/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/StatusBar"
        android:orientation="horizontal"
        android:layout_weight="12"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
        android:id="@+id/EditAnswerButton"
        android:text="Edit Answer"
        android:textSize="14dp"
        android:layout_marginTop="3dp"
        android:layout_weight="90"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/NextQuestionButton"
            android:text="Next Question"
            android:textSize="14dp"
            android:layout_marginTop="3dp"
            android:layout_weight="90"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="twanwatanakool.elevatorpitches.IndividualCompany">

    <LinearLayout
        android:id="@+id/CompanyNameBar"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:background="#FA8072"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/MenuButton"
            android:layout_weight="10"
            android:text="Menu"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CompanyName"
            android:layout_weight="90"
            android:text="Company 1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#FFFFF0"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/CompanyTasks"
        android:orientation="vertical"
        android:layout_weight="90"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/Position"
            android:text="Position/Program"
            android:textSize="19dp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/InterviewChecklist"
            android:text="Interview Checklist"
            android:textSize="19dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/Notes"
            android:text="Notes on Company"
            android:textSize="19dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/TechQuestions"
            android:text="Technical Questions"
            android:textSize="19dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/BehavioralQuestions"
            android:text="Behavioral Questions"
            android:textSize="19dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/InterviewTips"
            android:text="Interview Tips"
            android:textSize="19dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
